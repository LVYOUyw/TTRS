<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id='@+id/header_station'
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="站名"
            android:textColor="@color/blank"
            app:layout_constraintBottom_toBottomOf="@+id/header_dot"
            app:layout_constraintEnd_toStartOf="@+id/header_arrive_time"
            app:layout_constraintStart_toEndOf="@+id/header_dot"
            app:layout_constraintTop_toTopOf="@+id/header_dot" />

        <TextView
            android:id="@+id/header_arrive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="到时"
            android:textColor="@color/blank"
            app:layout_constraintBottom_toBottomOf="@+id/header_station"
            app:layout_constraintEnd_toStartOf="@+id/header_stopover"
            app:layout_constraintStart_toEndOf="@+id/header_station"
            app:layout_constraintTop_toTopOf="@+id/header_station" />

        <TextView
            android:id="@+id/header_depart_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="发时"
            android:textColor="@color/blank"
            app:layout_constraintBottom_toBottomOf="@+id/header_stopover"
            app:layout_constraintEnd_toStartOf="@+id/header_fare"
            app:layout_constraintStart_toEndOf="@+id/header_stopover"
            app:layout_constraintTop_toTopOf="@+id/header_stopover" />

        <TextView
            android:id="@+id/header_fare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="票价"
            android:textColor="@color/blank"
            app:layout_constraintBottom_toBottomOf="@+id/header_depart_time"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/header_depart_time"
            app:layout_constraintTop_toTopOf="@+id/header_depart_time" />

        <TextView
            android:id="@+id/header_stopover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="停时"
            android:textColor="@color/blank"
            app:layout_constraintBottom_toBottomOf="@+id/header_arrive_time"
            app:layout_constraintEnd_toStartOf="@+id/header_depart_time"
            app:layout_constraintStart_toEndOf="@+id/header_arrive_time"
            app:layout_constraintTop_toTopOf="@+id/header_arrive_time" />

        <ImageView
            android:id="@+id/header_dot"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginBottom="24dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/ic_dot"
            android:tint="@color/blank"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </android.support.constraint.ConstraintLayout>


</android.support.v7.widget.CardView>