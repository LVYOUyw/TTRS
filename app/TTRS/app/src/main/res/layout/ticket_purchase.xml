<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ticket_purchase_seat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="座次"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ticket_purchase_price"
        app:layout_constraintEnd_toStartOf="@+id/ticket_purchase_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ticket_purchase_price" />

    <TextView
        android:id="@+id/ticket_purchase_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="￥666"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ticket_purchase_amount"
        app:layout_constraintEnd_toStartOf="@+id/ticket_purchase_amount"
        app:layout_constraintStart_toEndOf="@+id/ticket_purchase_seat"
        app:layout_constraintTop_toTopOf="@+id/ticket_purchase_amount" />

    <TextView
        android:id="@+id/ticket_purchase_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="余票"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ticket_purchase_button"
        app:layout_constraintEnd_toStartOf="@+id/ticket_purchase_button"
        app:layout_constraintStart_toEndOf="@+id/ticket_purchase_price"
        app:layout_constraintTop_toTopOf="@+id/ticket_purchase_button" />

    <Button
        android:id="@+id/ticket_purchase_button"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/colorLoginButton"
        android:text="预订"
        android:textColor="@color/blank"
        app:layout_constraintBottom_toTopOf="@+id/ticket_purchase_cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ticket_purchase_amount"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ticket_purchase_cursor"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorCursor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ticket_purchase_button" />

</android.support.constraint.ConstraintLayout>