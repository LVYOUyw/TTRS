<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/train_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="车次"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:typeface="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/departure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:text="起点站"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/train_id"
            app:layout_constraintStart_toEndOf="@+id/train_id"
            app:layout_constraintTop_toTopOf="@+id/train_id"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/arrow_right_icon"
            android:layout_width="72dp"
            android:layout_height="36dp"
            android:layout_marginEnd="48dp"
            android:layout_marginStart="48dp"
            android:src="@drawable/ic_arrow"
            app:layout_constraintBottom_toBottomOf="@+id/departure"
            app:layout_constraintEnd_toStartOf="@+id/destination"
            app:layout_constraintStart_toEndOf="@+id/departure"
            app:layout_constraintTop_toTopOf="@+id/departure"
            app:layout_constraintVertical_bias="0.47" />

        <TextView
            android:id="@+id/destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:layout_marginTop="8dp"
            android:text="终点站"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toBottomOf="@+id/arrow_right_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/arrow_right_icon"
            app:layout_constraintTop_toTopOf="@+id/arrow_right_icon"
            app:layout_constraintVertical_bias="0.111" />

        <TextView
            android:id="@+id/destination_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到达时间"
            android:textColor="@color/colorRegisterButton"
            android:textSize="10sp"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="@+id/destination"
            app:layout_constraintStart_toStartOf="@+id/destination"
            app:layout_constraintTop_toBottomOf="@+id/destination" />

        <TextView
            android:id="@+id/depart_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="出发时间"
            android:textColor="@color/colorRegisterButton"
            android:textSize="10sp"
            android:typeface="monospace"
            app:layout_constraintEnd_toEndOf="@+id/departure"
            app:layout_constraintStart_toStartOf="@+id/departure"
            app:layout_constraintTop_toBottomOf="@+id/departure" />

        <View
            android:id="@+id/train_cursor"
            android:layout_width="500dp"
            android:layout_height="1dp"
            android:layout_marginTop="68dp"
            android:background="@color/colorCursor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/train_id"
            app:layout_constraintEnd_toStartOf="@+id/departure"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/train_id"
            app:layout_constraintTop_toTopOf="@+id/train_id"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/ic_depart" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            app:layout_constraintBottom_toBottomOf="@+id/arrow_right_icon"
            app:layout_constraintEnd_toStartOf="@+id/destination"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/arrow_right_icon"
            app:layout_constraintTop_toTopOf="@+id/arrow_right_icon"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_arrive" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>